@model IEnumerable<Category>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-cneter">
                <h2 class="text-light">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-1 pb-1">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Category
                </a>
            </div>
        </div>
        <table class="table table-striped">
            <thead class="bg-dark text-light">
                <tr>
                    <th>Category Name</th>
                    <th>Category Code</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category cat in Model)
                {
                    <tr>
                        <td>@cat.Name</td>
                        <td>@cat.Id</td>
                        <td>
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
